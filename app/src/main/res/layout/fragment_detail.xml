                    android:id="@+id/author"
                    android:text="No Reviews at this time."
                    android:textSize="8pt"
                    android:textColor="@color/accent_material_light"/>


            </LinearLayout>

            <include
                android:id="@+id/review1"
                layout="@layout/content_item">
            </include>

            <include
                android:id="@+id/review2"
                layout="@layout/content_item">
            </include>

